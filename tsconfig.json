{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2021",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/src",
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "typeRoots": ["@types", "node_modules/@types"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist", "./coverage", "__tests__", "jest.config.js"]
}
