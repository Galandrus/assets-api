{
    "name": "flixxo-challenge",
    "version": "1.0.0",
    "description": "This project is a challenge of Flixxo",
    "main": "src/index.ts",
    "scripts": {
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "build": "./node_modules/.bin/tsc -p .",
        "build:dev": "swc ./src -d ./dist",
        "prestart": "npm run build:dev",
        "start": "node -r dotenv/config --trace-warnings ./dist/index.js",
        "dev:compose": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 BUILDKIT_PROGRESS=plain docker-compose up --build ",
        "dev:compose:force": "docker container prune -f && COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 BUILDKIT_PROGRESS=plain docker-compose up --build",
        "dev": "nodemon"
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "module",
            "parser": "typescript"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Galandrus/flixxo-challenge"
    },
    "engines": {
        "npm": ">=8.19.0",
        "node": ">=18.12.0"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "homepage": "https://github.com/Galandrus/flixxo-challenge#readme",
    "devDependencies": {
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.2.209",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.13",
        "@types/joi": "^17.2.3",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.11.18",
        "@types/node-fetch": "^2.5.7",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-mocha": "^9.0.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^4.2.1",
        "lint-staged": "^10.5.2",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "joi": "^17.7.0",
        "morgan": "^1.10.0",
        "mysql": "^2.18.1",
        "node-fetch": "^2.6.1",
        "reflect-metadata": "^0.1.13",
        "swagger-jsdoc": "6.2.1",
        "swagger-ui-express": "4.3.0",
        "ts-node": "^10.9.1",
        "typeorm": "^0.3.11",
        "typescript": "^4.9.4",
        "ulid": "^2.3.0",
        "winston": "3.8.2"
    }
}
